{
    "name": "oro/gen-ai",
    "description": "OroCommerce AI Generation Integration",
    "keywords": ["Oro", "AI Generation", "Integration"],
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Oro, Inc",
            "homepage": "https://oroinc.com/"
        }
    ],
    "autoload": {
        "psr-4": {"Oro\\Bundle\\AiContentGenerationBundle\\": "src/Oro/Bundle/AiContentGenerationBundle"},
        "exclude-from-classmap": ["/Tests/"]
    },
    "require": {
        "oro/commerce": "6.1.*",
        "openai-php/client": "^0.4.1",
        "google/apiclient": "^2.18.2"
    },
    "repositories": {
        "oro": {
            "type": "composer",
            "url": "https://packagist.oroinc.com"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "6.1-dev"
        }
    }
}
